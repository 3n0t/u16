#!/bin/bash
# pimptools :: git v0.1.0

set -e
set -u
set -o pipefail

usage() {
cat << EOF

-=[ pimptools :: git v0.1.0 ]=-

git (add > commit -m "seconds since Epoch" > push) alias

usage: ${0##*/} [option]...

    -p  --pull            git pull first
    -v  --version         specify a new version
    -h  --help            display help and exit

EOF
}

info() {
	echo "[INFO] $1"
}

error() {
	echo "[ERROR] $1"
	exit 1
}

git_pacp() {
	if ! [[ -z ${PULL-} ]]; then
		git pull
	fi
	git add --all .
	git commit -a -m "$(date +%s)"
	git push
	exit 0
}

while [[ $# > 0 ]]; do
	arg=$1
	case $arg in
		-h|--help)
			usage
		;;
		-p|--pull)
			PULL=true
			shift
		;;
		*)
			usage
		;;
	esac
done

git_pacp
