#!/bin/bash
# pimptools :: git v0.1.0

set -e
set -u
set -o pipefail

usage() {
cat << EOF

-=[ pimptools :: git v0.1.0 ]=-

git (add > commit -m version > push) alias

usage: ${0##*/} [option]...

    -p  --pull            git pull first
    -v  --version         specify a new version
    -h  --help            display help and exit

EOF
}

info() {
	echo "[INFO] $1"
}

error() {
	echo "[ERROR] $1"
	exit 1
}

git_pacp() {
	if ! [[ -z ${PULL-} ]]; then
		git pull
	fi
	git add --all .
	git commit -a -m $1
	git push
	exit 0
}

if [[ ! -f version ]]; then
	error "version file not found"
else
	version_content=$(< version)
	VERSION="${version_content%-*}"
fi

while [[ $# > 0 ]]; do
	arg=$1
	case $arg in
		-h|--help)
			usage
		;;
		-p|--pull)
			PULL=true
			shift
		;;
		-v|--version)
			if [[ $# -eq 1 ]]; then
				info "current version: $VERSION"
				read -p "new version: " new_version
				if ! [[ -z $new_version ]]; then
					VERSION=$new_version
				fi
			else
				VERSION=$2
				shift
			fi
			shift
			if [[ $VERSION == -* ]]; then
				error "unsupported version"
			fi
		;;
		*)
			usage
		;;
	esac
done

FULL_VERSION=$VERSION-"$(date -u +%y%m%d%H%M%S)"
echo $FULL_VERSION > version
git_pacp $FULL_VERSION
